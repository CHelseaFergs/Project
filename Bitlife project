import java.util.* ;
import java.util.Scanner ;
public class Bitlife {
    public int happiness ;
    public String type ;


    public boolean leave(boolean whatever){
        Scanner exit = new Scanner(System.in) ;
        System.out.print("Press 1 if you're SURE. Press 2 if you want to stay. ");
        int didleave = Integer.parseInt(exit.nextLine()) ;
        if (didleave == 1) {
            whatever = true ;
        }
        if (didleave == 2) {
            whatever = false ;
        }
        return whatever ;
    }

    public String status() {
        String stat = "" ;
        int num = (int) ((Math.random() * 3) + 1);
        if (num == 1) {
            stat = "existing" ;
        }
        if (num == 2) {
            stat = "existential crisis" ;
        }
        if (num == 3) {
            stat = "live laugh love" ;
        }
        return(stat) ;
    }

    public void die(boolean unalive) {
        List<String> dumbwaystodielife = Arrays.asList("") ;
        int death = (int) ((Math.random() * 12) + 1) ;
        System.out.println(death) ;
        unalive = true ;
    }
    public void events() {
        List<String> events = Arrays.asList();
        int occur = (int) ((Math.random() * 12) + 1) ;
        System.out.print(events.remove(occur)) ;
    }
}



import java.util.* ;

public class Work extends Bitlife {
    int promotion = 0;
    int demotion = 0;

    public String status() {
        String stat = "";
        int num = (int) ((Math.random() * 3) + 1);
        if (num == 1) {
            stat = "working";

        }
        if (num == 2) {
            stat = "networking";
        }
        if (num == 3) {
            stat = "on break";
        }
        return (stat);
    }


    public void promote(boolean only) {
        if (only) {
            int promoter = (int) ((Math.random() * 6) - 1);
            promotion += promoter;
        } else {
            int promoter = (int) ((Math.random() * 6) - 1) ;
            promotion += promoter ;
            if (promoter < 0) {
                happiness -= 1;
                demotion += 1;
            } else {
                happiness += promotion;
            }
        }
    }

    public void makemoney() {
        promote(false);
        if (promotion == 0) {
            System.out.print("You had a regular day of work. No promotion or demotion. You currently make $16 an hour. Let's go minimum wage!");
        } else if (demotion >= 1) {
            if (promotion == 1) {
                System.out.print("Working your way back up I see!!");
            } else if (demotion <= 0) {
                System.out.print("Good work.. You now make $20. Working your way up!");
            } else if (promotion >= 2) {
                System.out.print("Nice! A whoppin' $28 an hour. Call you butter because you're on a roll!");
            } else if (promotion < -2) {
                System.out.print("You're fired!");
            } else if (promotion < 0) {
                System.out.println("Yikes. You've been demoted, buddy. Any more and you'll be fired!");
            }
        }
    }

